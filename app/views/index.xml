<Alloy>
    <Window id="container" class="container">
        <View id="main" class="main">
            <Label class="h1">Reminders</Label>
            <ListView id="list" defaultItemTemplate="basic">
                <Templates>
                    <ItemTemplate name="basic">
                        <Label bindId="icon" id="icon"/>
                        <Label class="basicItem" bindId="info" id="title"/>
                    </ItemTemplate>
                </Templates>
                <ListSection>
                    <ListItem class="item" icon:backgroundColor="green" icon:text ="P" info:text="Phone Steve"/>
                    <ListItem class="item" icon:backgroundColor="red" icon:text ="B" info:text="Book surfing lessons"/>
                    <ListItem class="item" icon:backgroundColor="blue" icon:text ="P" info:text="Phone B&B"/>
                </ListSection>
            </ListView>
        </View>
        <View id="overlay" class="overlay">
            <View id="inputForm" class="inputForm"/>
            <View id="fields" class="fields">
                <TextField id="textField" onChange="onTextFieldChange" />
                <Button id="okbutton" class="okbutton" onClick="onClick"/>
            </View>
        </View>
        <Button id="button" class="button" onClick="onClick"/>
    </Window>
</Alloy>
