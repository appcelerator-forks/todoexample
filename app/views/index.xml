<Alloy>
    <Window class="container" id="container" onClose="cleanUp">
        <View class="main" id="main">
            <Label class="h1">Reminders</Label>
            <Button class="edit" id="edit" onClick="editList">edit</Button>
            <ListView defaultItemTemplate="basic" id="list" onPull="doPull">
                <Templates>
                    <ItemTemplate name="basic">
                        <Label bindId="icon" class="icon" id="icon"/>
                        <Label bindId="info" class="basicItem" id="title"/>
                        <Label bindId="uuid" class="uuid" id="uuid"/>
                    </ItemTemplate>
                </Templates>
                <ListSection dataCollection="todoItems" dataFunction="updateListViewUi" dataTransform="doTransform" id="section">
                    <ListItem expanded="{expanded}" class="item" canEdit="{canEdit}" icon:backgroundColor="{bgColor}" icon:text="{iconInitial}" info:text="{title}" template="{template}" touchEnabled="true" uuid:text="{id}"/>
                </ListSection>
                <PullView>
                    <View backgroundColor="black" height="50">
                        <Label/>
                    </View>
                </PullView>
            </ListView>
        </View>
        <View class="overlay" id="overlay">
            <View class="inputForm" id="inputForm"/>
            <View class="fields" id="fields">
                <TextField id="textField" onChange="onTextFieldChange"/>
                <Button class="okbutton" id="okbutton" onClick="onOkClick"/>
            </View>
        </View>
        <Button class="button" id="button" onClick="onClick"/>
    </Window>
</Alloy>
