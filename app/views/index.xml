<Alloy>
    <Window id="container" class="container" onClose="cleanUp">
        <View id="main" class="main">
            <Label class="h1">Reminders</Label>
            <ListView id="list" defaultItemTemplate="basic" onPull="doPull">
                <Templates>
                    <ItemTemplate name="basic">
                        <Label bindId="icon" id="icon"/>
                        <Label class="basicItem" bindId="info" id="title"/>
                    </ItemTemplate>
                </Templates>
                <ListSection id="section" dataCollection="todoItems" dataTransform="doTransform" dataFunction="updateListViewUi">
                    <ListItem template="{template}" icon:backgroundColor="{bgColor}" icon:text ="{iconInitial}" info:text="{title}"/>
                </ListSection>
                <PullView>
                    <View height="50" backgroundColor="black">
                        <Label/>
                    </View>
                </PullView>
            </ListView>
        </View>
        <View id="overlay" class="overlay">
            <View id="inputForm" class="inputForm"/>
            <View id="fields" class="fields">
                <TextField id="textField" onChange="onTextFieldChange" />
                <Button id="okbutton" class="okbutton" onClick="onOkClick"/>
            </View>
        </View>
        <Button id="button" class="button" onClick="onClick"/>
    </Window>
</Alloy>
